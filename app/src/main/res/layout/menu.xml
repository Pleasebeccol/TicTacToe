<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game with Player"
        android:id="@+id/buttonNewGameWithPlayer"
        android:layout_column="19"
        android:onClick="onClickNewGameWithPlayer"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game with Bot"
        android:id="@+id/buttonNewGameWithBot"
        android:layout_column="19"
        android:onClick="onClickNewGameWithBot"
        android:layout_gravity="center_horizontal" />

</LinearLayout>